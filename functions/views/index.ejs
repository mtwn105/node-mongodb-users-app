<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>

    <!-- importing links -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/css/bootstrap.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      integrity="sha512-9usAa10IRO0HhonpyAIVpjrylPvoDwiPUiKdWk5t3PyolY1cOd4DSE0Ga+ri4AuTroPR5aQvXU9xC6qOPnzFeg=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
  </head>
  <body>
    <!-- importing scripts -->
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/js/bootstrap.bundle.min.js"
      integrity="sha512-pax4MlgXjHEPfCwcJLQhigY7+N8rt6bVvWLFyUMuxShv170X53TRzGPmPkZmGBhk+jikR8WBM4yl7A9WMHHqvg=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    ></script>

    <!-- actual code start from here -->

    <!-- header  -->
    <%- include('layout/header') %>

    <!-- main container  -->
    <div class="container">
      <div class="row my-4">
        <div class="col-lg-12">
          <% if (message) { %>
          <div
            class="alert alert-dissmissable fade show alert-<%= message.type %>"
            role="alert"
          >
            <strong> <%= message.message %> </strong>
            <button
              class="btn-close"
              data-bs-dismiss="alert"
              aria-label="Close"
            ></button>
          </div>
          <% } %>
          <div class="table-responsive">
            <% if (users == '') { %>
            <h1 class="text-center text-seconday mt-5">No Users Found</h1>
            <% } else { %>
            <table class="table table-striped text-center">
              <thead>
                <tr class="table-dark">
                  <th>ID</th>
                  <th>Image</th>
                  <th>Name</th>
                  <th>Email</th>
                  <th>Phone</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                <% users.forEach((user, index) => { %>
                <tr class="align-middle">
                  <td><%= index + 1 %></td>
                  <td>
                    <img
                      src="./uploads/<%= user.image %>"
                      width="50"
                      class="img-thumbnail"
                      alt="pfp"
                    />
                  </td>
                  <td><%= user.name %></td>
                  <td><%= user.email %></td>
                  <td><%= user.phone %></td>
                  <td>
                    <a href="edit/<%= user._id %>" class="text-success"
                      ><i class="fas fa-edit fa-lg mx-1"></i
                    ></a>
                    <a href="delete/<%= user._id %>" class="text-danger"
                      ><i class="fas fa-trash fa-lg mx-1"></i
                    ></a>
                  </td>
                </tr>
                <% }) %>
              </tbody>
            </table>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
